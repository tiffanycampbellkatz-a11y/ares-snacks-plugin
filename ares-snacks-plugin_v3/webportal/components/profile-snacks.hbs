
<section class="profile-snacks card panel snacks-panel">
  <h3 class="card-title">Snacks</h3>
  {{#if this.loading}}
    <p>Loading snacks...</p>
  {{else}}
    {{#if this.snacks.length}}
      <ul class="snack-list">
        {{#each this.snacks as |item|}}
          <li class="snack-row">
            <span class="snack-name">{{item.label}}</span>
            <span class="snack-qty">&times; {{item.qty}}</span>
            <span class="snack-desc">{{item.desc}}</span>
            {{#if this.isSelf}}
              <button type="button" class="snack-eat-btn" {{action "eatSnack" item.key}} disabled={{this.eating}}>
                {{#if this.eating}}...{{else}}Eat{{/if}}
              </button>
            {{/if}}
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No snacks yet.</p>
    {{/if}}
  {{/if}}
</section>
<style>
/* Dark-mode friendly styles; uses generic classes to blend with total dark mode */
.profile-snacks.card.panel.snacks-panel {
  background: var(--bg-2, #111);
  border: 1px solid var(--border-1, #333);
  border-radius: 12px;
  padding: 12px;
}
.profile-snacks .snack-list {
  list-style: none;
  margin: 0;
  padding: 0;
  display: grid;
  grid-template-columns: 1fr;
  gap: 6px;
}
.profile-snacks .snack-row {
  display: grid;
  grid-template-columns: 1fr auto;
  grid-template-areas: "name qty" "desc desc" "btn btn";
  gap: 4px 12px;
  align-items: center;
  padding: 8px;
  background: var(--bg-3, #0c0c0c);
  border: 1px solid var(--border-2, #2a2a2a);
  border-radius: 8px;
}
.profile-snacks .snack-name { grid-area: name; font-weight: 600; }
.profile-snacks .snack-qty  { grid-area: qty; opacity: 0.8; }
.profile-snacks .snack-desc { grid-area: desc; opacity: 0.85; font-size: 0.95em; }
.profile-snacks .snack-eat-btn {
  grid-area: btn;
  justify-self: start;
  background: var(--accent-1, #444);
  color: var(--text-1, #ddd);
  border: 1px solid var(--border-2, #2a2a2a);
  border-radius: 8px;
  padding: 6px 10px;
  cursor: pointer;
}
.profile-snacks .snack-eat-btn:hover {
  filter: brightness(1.1);
}
@media (min-width: 640px) {
  .profile-snacks .snack-row {
    grid-template-columns: 1fr auto 1fr auto;
    grid-template-areas: "name qty desc btn";
  }
  .profile-snacks .snack-eat-btn { justify-self: end; }
}
</style>
